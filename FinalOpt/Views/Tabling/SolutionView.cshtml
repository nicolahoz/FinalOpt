@model FinalOpt.Models.SolutionModel

<section class="container-fluid">
    @if (Model.ErrorMessage != null)
    {
        <div class="display-error-message">
            <strong style="color: #da291c">@Model.ErrorMessage</strong>
        </div>
    }
    else
    {

        <div id="tabs">
            <ul>
                @for (int i = 0; i < Model.classes.Count ; i++)
                {
                    <li><a href="#tab-@i">@Model.classes[i].ClassName</a></li>
                }
            </ul>
            @for (int i = 0; i < Model.classes.Count; i++)
            {
                <div id="tab-@i">
                    <div id="content" class="table-container">
                        <div class="scrollable-container" style="max-height: 500px;">
                            <table class="table-style">
                                <thead class="table-head">
                                    <tr style="border-radius: 8px;">
                                        <td>Día</td>
                                        <td>Hora</td>
                                        <td>Aula</td>
                                        <td>Asignatura</td>
                                        <td>Profesor</td>
                                    </tr>
                                </thead>
                                <tbody class="table-body">
                                    @for (int j = 0; j < Model.timetable[i].Count; j++)
                                    {
                                        @if (((Model.timetable[i][j].hour % Model.dduration[0].DayDuration) + 1) == 1 && ((Model.timetable[i][j].hour / Model.dduration[0].DayDuration) + 1) != 1)
                                        {
                                            <tr style="background-color: pink">
                                                <td></td>
                                                <td></td>                                           
                                                <td></td>                                           
                                                <td></td>                                           
                                                <td></td>                                           
                                            </tr>
                                        }
                                        <tr>
                                            <td>@((Model.timetable[i][j].hour / Model.dduration[0].DayDuration) + 1)</td>
                                            <td>@((Model.timetable[i][j].hour % Model.dduration[0].DayDuration) + 1)</td>
                                            <td>@Model.timetable[i][j].room</td>
                                            <td>@Model.timetable[i][j].discipline</td>
                                            <td>@Model.timetable[i][j].teacher</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>          
    }
</section>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jqueryui/jquery-ui.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tabs").tabs();
    });
</script>